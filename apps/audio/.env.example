# Database
DATABASE_URL="postgresql://user:password@localhost:5432/lena_audio"

# Supabase
SUPABASE_URL="your_supabase_url"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Web3 Storage (IPFS)
WEB3_STORAGE_TOKEN="your_web3_storage_token"

# Authentication
MAGIC_PUBLISHABLE_KEY="your_magic_publishable_key"
MAGIC_SECRET_KEY="your_magic_secret_key"

# Payments
STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key"
STRIPE_SECRET_KEY="your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"

# Lightning Network
LIGHTNING_NODE_URL="your_lightning_node_url"
LIGHTNING_MACAROON="your_lightning_macaroon"

# Analytics
PLAUSIBLE_DOMAIN="your_plausible_domain"
PLAUSIBLE_API_KEY="your_plausible_api_key"

# Email
POSTMARK_SERVER_TOKEN="your_postmark_server_token"
POSTMARK_FROM_ADDRESS="noreply@lena.app"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your_jwt_secret"

# App Settings
PUBLIC_APP_URL="http://localhost:5173"
PUBLIC_API_URL="http://localhost:5173/api"
NODE_ENV="development"

# Feature Flags
ENABLE_WEB3=true
ENABLE_LIGHTNING=true
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW="60s"

# Cache
CACHE_TTL=3600

# Media Processing
MAX_UPLOAD_SIZE="100mb"
ALLOWED_AUDIO_FORMATS="mp3,wav,ogg,m4a"
AUDIO_QUALITY="320k"

# Search
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_API_KEY="your_meilisearch_api_key"

# Notifications
VAPID_PUBLIC_KEY="your_vapid_public_key"
VAPID_PRIVATE_KEY="your_vapid_private_key"
VAPID_SUBJECT="mailto:support@lena.app" 