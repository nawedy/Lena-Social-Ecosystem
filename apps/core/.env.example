# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Web3 Storage Configuration
VITE_WEB3_STORAGE_TOKEN=your_web3_storage_token

# Authentication Configuration
VITE_MAGIC_PUBLISHABLE_KEY=your_magic_publishable_key
MAGIC_SECRET_KEY=your_magic_secret_key

# Security Settings
VITE_SESSION_TIMEOUT=60 # minutes
VITE_MFA_REQUIRED=true
VITE_MIN_PASSWORD_LENGTH=12
VITE_REQUIRE_SPECIAL_CHAR=true
VITE_REQUIRE_NUMBER=true
VITE_REQUIRE_UPPERCASE=true
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=15 # minutes

# Rate Limiting
VITE_RATE_LIMIT_WINDOW=900000 # 15 minutes in milliseconds
VITE_RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
VITE_APP_URL=http://localhost:5173
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Encryption Settings
VITE_ENCRYPTION_KEY_SIZE=256
VITE_KEY_ROTATION_INTERVAL=30 # days

# IPFS Configuration
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/
VITE_IPFS_PIN_ENABLED=true

# Monitoring and Logging
VITE_ENABLE_AUDIT_LOGS=true
VITE_LOG_LEVEL=info

# Feature Flags
VITE_ENABLE_WEB3_AUTH=true
VITE_ENABLE_MAGIC_AUTH=true
VITE_ENABLE_EMAIL_AUTH=true
VITE_ENABLE_IPFS_STORAGE=true

# Development Settings
VITE_DEV_MODE=true
VITE_MOCK_AUTH=false
VITE_MOCK_STORAGE=false

# Analytics Configuration
PUBLIC_PLAUSIBLE_DOMAIN=your_domain.com

# Ethereum Configuration (Optional)
PUBLIC_ETHEREUM_NETWORK=mainnet
PUBLIC_INFURA_PROJECT_ID=your_infura_project_id 