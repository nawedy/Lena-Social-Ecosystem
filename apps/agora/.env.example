# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Magic.link Configuration (Optional)
VITE_MAGIC_PUBLISHABLE_KEY=your_magic_publishable_key

# Web3 Configuration
VITE_WEB3_NETWORK=mainnet
VITE_INFURA_PROJECT_ID=your_infura_project_id
VITE_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# IPFS Configuration
VITE_IPFS_GATEWAY=https://ipfs.io
VITE_WEB3_STORAGE_TOKEN=your_web3_storage_token

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
VITE_STRIPE_SECRET_KEY=your_stripe_secret_key
VITE_STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Analytics Configuration (Optional)
VITE_PLAUSIBLE_DOMAIN=your_domain
VITE_POSTHOG_TOKEN=your_posthog_token

# Feature Flags
VITE_ENABLE_WEB3=true
VITE_ENABLE_IPFS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_FIAT_PAYMENTS=true

# Smart Contract Addresses
VITE_MARKETPLACE_CONTRACT=your_marketplace_contract_address
VITE_ESCROW_CONTRACT=your_escrow_contract_address
VITE_NFT_CONTRACT=your_nft_contract_address

# API Keys for External Services
VITE_SHIPPING_API_KEY=your_shipping_api_key
VITE_GEOLOCATION_API_KEY=your_geolocation_api_key
VITE_EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# Security Configuration
VITE_MAX_FILE_SIZE=10485760 # 10MB in bytes
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=3600 # 1 hour in seconds 